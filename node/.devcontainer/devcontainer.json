{
  "name": "Node DevContainer",
  "dockerComposeFile": ["../../compose.yml", "../../compose.dev.yml"],
  "service": "node",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "ms-playwright.playwright",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // デフォルトのフォーマッタをPrettierに設定
      }
    }
  }
}
